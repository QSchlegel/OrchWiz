# PostgreSQL Configuration
POSTGRES_USER=orchwiz
POSTGRES_PASSWORD=changeme
POSTGRES_DB=orchis

# Database URL (used by Next.js)
# Format: postgresql://user:password@host:port/database?schema=public
# For Docker Compose, use the service name 'postgres' as the host
DATABASE_URL=postgresql://orchwiz:changeme@postgres:5432/orchis?schema=public

# Better Auth Configuration
BETTER_AUTH_SECRET=your-random-secret-key-here-minimum-32-characters
BETTER_AUTH_URL=http://nextjs:3000
NEXT_PUBLIC_APP_URL=https://your-tunnel-url.trycloudflare.com

# GitHub OAuth Configuration
# Get these from: https://github.com/settings/developers
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret

# Cloudflare Tunnel Configuration
# Get this from: https://one.dash.cloudflare.com/
# Navigate to Zero Trust > Networks > Tunnels
# Create a new tunnel and copy the token
CLOUDFLARE_TUNNEL_TOKEN=your_cloudflare_tunnel_token_here

# Node Environment
NODE_ENV=production
