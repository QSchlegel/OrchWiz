kube_context = "your-cloud-cluster"
namespace    = "orchwiz-shipyard"
app_name     = "orchwiz"
app_image    = "ghcr.io/your-org/orchwiz:latest"
app_port     = 3000
replicas     = 2

database_url_secret_name = "orchwiz-db-url"
database_url             = ""

better_auth_secret  = "replace-with-32-char-secret"
better_auth_url     = "https://orchwiz.example.com"
next_public_app_url = "https://orchwiz.example.com"

github_client_id     = ""
github_client_secret = ""

service_type   = "ClusterIP"
create_ingress = true
ingress_host   = "orchwiz.example.com"
ingress_annotations = {
  "nginx.ingress.kubernetes.io/proxy-body-size" = "10m"
}

app_env = {
  ENABLE_LOCAL_COMMAND_EXECUTION = "false"
}

enable_openclaw         = true
openclaw_image          = "ghcr.io/openclaw/openclaw:latest"
openclaw_gateway_token  = "replace-with-unique-openclaw-token-seed"
# Optional: provide dedicated per-station gateway tokens. When omitted, tokens
# are automatically derived from openclaw_gateway_token (e.g. "<seed>-xo").
# openclaw_gateway_tokens = {
#   xo  = "replace-with-openclaw-xo-token"
#   ops = "replace-with-openclaw-ops-token"
#   eng = "replace-with-openclaw-eng-token"
#   sec = "replace-with-openclaw-sec-token"
#   med = "replace-with-openclaw-med-token"
#   cou = "replace-with-openclaw-cou-token"
# }

enable_provider_proxy        = true
provider_proxy_image         = "ghcr.io/qschlegel/orchwiz-provider-proxy:latest"
provider_proxy_port          = 4000
provider_proxy_api_key       = "replace-with-unique-provider-proxy-api-key"
provider_proxy_storage_size  = "1Gi"
provider_proxy_default_model = "gpt-5"

# Kubeview is deployed and exposed by default at /kubeview.
enable_kubeview            = true
kubeview_chart_version     = "2.0.6"
kubeview_single_namespace  = false
kubeview_ingress_enabled   = true
kubeview_ingress_host      = "" # defaults to ingress_host when empty
kubeview_ingress_path      = "/kubeview"
kubeview_ingress_class_name = "nginx"
kubeview_ingress_annotations = {}

# Required when kubeview ingress auth enforcement is enabled.
kubeview_ingress_auth_required = true
kubeview_ingress_auth_annotations = {
  "nginx.ingress.kubernetes.io/auth-url"    = "https://auth.example.com/oauth2/auth"
  "nginx.ingress.kubernetes.io/auth-signin" = "https://auth.example.com/oauth2/start?rd=$scheme://$host$request_uri"
}
