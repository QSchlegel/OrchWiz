infrastructure_kind = "kind"
kube_context = "kind-orchwiz" # set to "minikube" when infrastructure_kind = "minikube"
namespace    = "orchwiz-starship"
app_name     = "orchwiz"
app_image    = "orchwiz:local-dev"

openclaw_image         = "ghcr.io/openclaw/openclaw:latest"
openclaw_gateway_token = "orchwiz-openclaw-dev-token"
# Optional: provide dedicated per-station gateway tokens. When omitted, tokens
# are automatically derived from openclaw_gateway_token (e.g. "<seed>-xo").
# openclaw_gateway_tokens = {
#   xo  = "orchwiz-openclaw-dev-token-xo"
#   ops = "orchwiz-openclaw-dev-token-ops"
#   eng = "orchwiz-openclaw-dev-token-eng"
#   sec = "orchwiz-openclaw-dev-token-sec"
#   med = "orchwiz-openclaw-dev-token-med"
#   cou = "orchwiz-openclaw-dev-token-cou"
# }

provider_proxy_image         = "ghcr.io/qschlegel/orchwiz-provider-proxy:latest"
provider_proxy_port          = 4000
provider_proxy_api_key       = "orchwiz-provider-proxy-dev-key"
provider_proxy_storage_size  = "1Gi"
provider_proxy_default_model = "gpt-5"

postgres_user     = "orchwiz"
postgres_password = "orchwiz_dev"
postgres_db       = "orchis"

better_auth_secret  = "replace-with-32-char-secret"
better_auth_url     = "http://localhost:3000"
next_public_app_url = "http://localhost:3000"

github_client_id     = ""
github_client_secret = ""

app_env = {
  ENABLE_LOCAL_COMMAND_EXECUTION = "false"
}

# Kubeview is deployed by default in local profile.
# Ingress exposure is opt-in; keep disabled unless local ingress is configured.
enable_kubeview          = true
kubeview_chart_version   = "2.0.6"
kubeview_single_namespace = false
kubeview_ingress_enabled = false
kubeview_ingress_host    = ""
kubeview_ingress_path    = "/kubeview"
kubeview_ingress_class_name = "nginx"
kubeview_ingress_annotations = {}
